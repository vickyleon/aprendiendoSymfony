{% extends 'base.html.twig' %}

{% block title %}Hello AnimalController!
{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px / 1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">

        <pre>
     {{ dump(animales) }}
 </pre>


        {% for animal in animales %}
            <li>{{animal.id}}
                <ul>
                    <li>
                        {{animal.tipo}}</li>
                    <li>
                        {{animal.color}}</li>

                    <li> {{animal.raza}}</li>
                </ul>
            </li>
        {% endfor %}
    </div>
{% endblock %}
